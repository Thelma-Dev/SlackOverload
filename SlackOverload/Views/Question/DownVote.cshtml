@model SlackOverload.Models.Question

@{
    ViewData["Title"] = "DownVote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DownVote Question</h1>


@if (Model == null)
{
    <p>@ViewBag.Message</p>
}
else
{

    <div class="mt-4">

        <h1>@Model.Title</h1>
        <p class="dateposted">Asked @Model.DatePosted</p>
        <hr />
        <div class="question-description">
            <p>@Model.Description</p>
        </div>

        <form action="DownVote" method="post">
            <input asp-for="Id" type="hidden" value="@Model.Id"/>
            <div class="form-group mt-4">
                <input type="submit" value="DownVote" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <p>@ViewBag.Message</p>
        </div>

    </div>
}



<div class="mt-4">
    <a asp-action="Index">View Personal Questions</a> | <a asp-action="Index" asp-controller="Home">Back To Home Page</a>
</div>
